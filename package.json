{
  "name": "@hmlad/floyd",
  "license": "MIT",
  "version": "0.0.1",
  "dependencies": {
    "@octokit/rest": "^14.0.9",
    "async": "~2.6.0",
    "dropbox-v2-api": "^2.1.13",
    "graphql": "^0.11.7",
    "graphql-client": "^2.0.1",
    "jake": "^8.0.15",
    "nconf": "~0.10.0",
    "node-fetch": "^2.0.0",
    "underscore": "~1.8.3"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-graphql": "^1.5.0",
    "eslint-plugin-prettier": "^2.6.0",
    "expect.js": "~0.3.1",
    "mocha": "~5.0.1",
    "prettier": "1.11.1"
  },
  "scripts": {
    "test": "yarn run lint && yarn run mocha",
    "fix": "yarn run eslint --fix & yarn run prettier --write & wait",
    "lint": "yarn run eslint & yarn run prettier -l & wait",
    "prettier": "prettier **/*.{json,md}",
    "eslint": "eslint . Jakefile",
    "mocha": "mocha --recursive specs"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "no-console": "off",
      "no-var": "error",
      "graphql/template-strings": "error"
    },
    "plugins": ["graphql"]
  }
}
