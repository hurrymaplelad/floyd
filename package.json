{
  "name": "@hmlad/floyd",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": "^16.6.1"
  },
  "dependencies": {
    "@octokit/rest": "^18.9.0",
    "async": "~3.2.1",
    "dropbox-v2-api": "^2.1.13",
    "graphql": "^15.5.1",
    "graphql-client": "^2.0.1",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "nconf": "~0.11.3",
    "node-fetch": "^3.1.1",
    "oauth": "^0.9.15",
    "plist": "^3.0.3",
    "sanitize-filename": "^1.6.3",
    "todoist": "^0.5.1",
    "trace-error": "^1.0.3",
    "winston": "^3.3.3",
    "xml2js": "^0.4.23",
    "yargs": "^17.1.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "expect.js": "~0.3.1",
    "mocha": "~9.0.3",
    "prettier": "^2.3.2"
  },
  "bin": "./floyd.js",
  "scripts": {
    "test": "yarn run lint && yarn run mocha",
    "fix": "yarn run eslint --fix & yarn run prettier --write & wait",
    "lint": "yarn run eslint & yarn run prettier -l & wait",
    "prettier": "prettier **/*.{json,md}",
    "eslint": "eslint .",
    "mocha": "mocha --timeout 5000 **/*.test.js",
    "rclone": "rclone --config rclone.conf",
    "gdocs": "yarn run rclone copy gdocs: dropbox:Apps/rclone/gdocs"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "mocha": true,
      "commonjs": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "no-var": "error",
      "no-console": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "graphql/template-strings": "error"
    },
    "plugins": [
      "graphql"
    ]
  }
}
