{
  "name": "@hmlad/floyd",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": "^16.6.1"
  },
  "dependencies": {
    "@octokit/rest": "^18.9.0",
    "async": "~3.2.1",
    "dropbox-v2-api": "^2.1.13",
    "goodreads-api-node": "hurrymaplelad/goodreads-api-node#access-token",
    "graphql": "^15.5.1",
    "graphql-client": "^2.0.1",
    "luxon": "^2.0.1",
    "nconf": "~0.11.3",
    "node-fetch": "^2.0.0",
    "yargs": "^17.1.0"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "expect.js": "~0.3.1",
    "mocha": "~9.0.3",
    "prettier": "^2.3.2"
  },
  "bin": "./floyd.js",
  "scripts": {
    "test": "yarn run lint && yarn run mocha",
    "fix": "yarn run eslint --fix & yarn run prettier --write & wait",
    "lint": "yarn run eslint & yarn run prettier -l & wait",
    "prettier": "prettier **/*.{json,md}",
    "eslint": "eslint .",
    "mocha": "mocha --timeout 5000 **/*.test.js",
    "rclone": "rclone --config rclone.conf",
    "gdocs": "yarn run rclone copy gdocs: dropbox:Apps/rclone/gdocs"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "no-console": "off",
      "no-var": "error",
      "graphql/template-strings": "error"
    },
    "plugins": [
      "graphql"
    ]
  }
}
